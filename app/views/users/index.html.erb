<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', book: @book, user: @user %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h1>Users</h1>
        <table class="table">
          <tbody>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <% @users.each do |user| %>
            <tr>
              <th>
                <%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
              </th>
              <th><%= user.name %><th>
              <th><%= link_to "Show", user_path(user.id) %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>